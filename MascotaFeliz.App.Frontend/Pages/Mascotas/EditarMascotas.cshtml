@page
@model MascotaFeliz.App.Frontend.Pages.EditarMascotasModel
@{
}
<div class="text-center">
    <h2>Agregar o editar Mascotas</h2>
</div>

<div class="principalForm">
    <form method="post">
        <div class="form-group">
            <input type="hidden" asp-for="mascota.Id" />

            <label asp-for="mascota.Nombre"></label>
            <input asp-for="mascota.Nombre" class="form-control" placeholder="Nombre mascota" required>
            <label asp-for="mascota.Color"></label>
            <input asp-for="mascota.Color" class="form-control" placeholder="Color" required>
            <label asp-for="mascota.Especie"></label>
            <input asp-for="mascota.Especie" class="form-control" placeholder="Especie" required>
            <label asp-for="mascota.Raza"></label>
            <input asp-for="mascota.Raza" class="form-control" placeholder="Raza" required>
            <br>
            <label for="dueno">Dueño</label>
            <br>
            <select id="dueno" asp-for="mascota.Dueno.Id" name="duenoId" required>
                <option value="0">Seleccione un Dueño</option>
                @foreach (var dueno in Model.listaDuenos)
                {
                    <option value="@dueno.Id">@dueno.Nombres @dueno.Apellidos</option>
                }
            </select>
            <br>
            <label for="veterinario">Veterinario</label>
            
            <select id="veterinario" asp-for="mascota.Veterinario.Id" name="veterinarioId" required>
                <option value="0">Seleccione un Veterinario</option>
                @foreach (var veterinario in Model.listaVeterinarios)
                {
                    <option value="@veterinario.Id">@veterinario.Nombres @veterinario.Apellidos</option>
                }
            </select>

            <br>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
</div>


<a asp-page="./ListaMascotas" class="btn-default">Lista de Mascotas </a>